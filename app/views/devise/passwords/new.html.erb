<div class="row justify-content-center my-4">
  <div class="col-md-4 bg-white p-5 my-5 rounded-4 shadow">
    <h2 class="text-center mb-4 userw-title-text">Esqueceu a sua senha?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    label: "E-mail",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions d-flex mt-4">
        <%= f.button :submit, "Enviar e-mail",
                     class: 'btn btn-outline-warning mb-1 rounded-3 shadow-sm flex-grow-1 btn btn-outline-warning my-2 mb-4 me-3 w-100' %>
       <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>
