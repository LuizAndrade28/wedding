<div class="row justify-content-center mt-3">
  <div class="col-md-4">
    <h2 class="mt-4">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs mt-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    :label => 'Senha',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, :label => 'Lembrar', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit,
                     "Entrar",
                     class: 'btn btn-outline-primary mb-1 rounded-3 shadow-sm' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
