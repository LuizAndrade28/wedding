<div class="row justify-content-center my-4">
  <div class="col-md-4 bg-white p-5 mt-5 rounded-4 shadow">
    <h2 class="text-center mb-4 userw-title-text">Entrar</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs mt-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "usuário@email.com",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    :label => 'Senha',
                    required: false,
                    placeholder: "•••••••••",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, :label => 'Lembrar', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex mt-4">
        <%= f.button :submit,
                     "Entrar",
                     class: 'btn btn-outline-warning mb-1 rounded-3 shadow-sm flex-grow-1 btn btn-outline-warning my-2 mb-4 me-3 w-100' %>
        <%= render "devise/shared/links" %>
      </div>
      <%# link_to "Esqueceu a sua senha?", new_password_path(resource_name), class: "mb-4", style: "color: #6f6fab"%><br />
    <% end %>

  </div>
</div>
