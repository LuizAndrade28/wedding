<div class="row justify-content-center my-4">
  <div class="col-md-4">
    <h2>Registrar-se</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    label: "Nome",
                    required: true,
                    autofocus: true %>
        <%= f.input :last_name,
                    label: "Sobrenome",
                    required: true,
                    autofocus: true %>
        <%= f.input :phone,
                    label: "Celular",
                    hint: "Ex: 11999998888",
                    required: true,
                    autofocus: true %>
        <%= f.input :email,
                    label: "E-mail",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Senha",
                    required: true,
                    hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmação senha",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :photo,
                    label: "Foto",
                    as: :file %>
      </div>

      <div class="form-actions">
        <%= f.button :submit,
                    "Finalizar cadastro",
                    class: 'btn btn-outline-primary mb-1 rounded-3 shadow-sm' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
