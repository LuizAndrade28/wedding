<div class="container mt-5 text-allign">
  <h1>Criar um Presente</h1>
</div>

<div class="container my-5 flex-item-align-text">
  <%= render "gift_form" %>
</div>
<div class="container">
    <div class="row">
      <div class="col-8">
        <div class="card">
          <br>
          <h4> Meu Carrinho</h4>
          <h6>Discrição do Produto</h6>

          <img src="<%= asset_path 'img_presente.jpg' %>" class="card_order-img-top" alt="Image"  style="width: 309px; height: 200px; >
          <div class="card-body">
            <%# <h5 class="card_order-title"><%= gift.title%> </h5> %>
            <%# <p> Categoria: <%=gift.category%> </p> %>
            <%= form_with url: '/caminho_para_salvar_dados', method: :post do |form| %>
              <div class="form-group">
                <%= form.label :nome, 'Insira seu nome' %>
                <%= form.text_field :nome, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= form.label :mensagem, 'Deixe uma mensagem' %>
                <%= form.text_area :mensagem, class: 'form-control' %>
              </div>
              <br>
              <%= form.submit 'Adicionar mais intens ', class: 'btn btn-primary' %>
              <%= form.submit 'Continuar a comprar', class: 'btn btn-primary' %>
            <% end %>

          </div>

        </div>
      </div>
    </div>
  </div>
