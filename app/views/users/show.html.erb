<div class="h-100 vh-75 mt-5">
  <div class="d-flex bg-white h-100 py-5 shadow-sm" data-controller="toggle">
    <div class="border m-3 p-2">
      <div class="flex-grow-1 d-flex flex-column justify-content-between">
        <div class="border h-25 bg-warning m-3 rounded-4 d-flex justify-content-center align-items-center btn shadow" data-toggle-target="btnDados" data-action="click->toggle#fireChoiceDados">
          <h4 class="fw-bold text-white m-0">Meus dados</h4>
        </div>
        <div class="flex-grow-1 border h-25 bg-warning m-3 rounded-4 d-flex justify-content-center align-items-center btn shadow" data-toggle-target="btnCasamento" data-action="click->toggle#fireChoiceCasamento">
          <h4 class="fw-bold text-white m-0">Meu casamento</h4>
        </div>
        <div class="flex-grow-1 border h-25 bg-warning m-3 rounded-4 d-flex justify-content-center align-items-center btn shadow">
          <%= link_to 'Retornar', root_path, class: "h4 text-decoration-none fw-bold text-white m-0" %>
        </div>
      </div>
    </div>
    <div class="flex-grow-1 h-100 p-2">
      <%= render 'dados_user' %>
      <%= render 'dados_casamento' %>
    </div>
  </div>
</div>
