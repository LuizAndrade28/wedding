<!DOCTYPE html>
<html>
  <head>
    <title>Casa dos Noivos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,200;0,300;0,400;0,800;1,100;1,700;1,800&family=Protest+Guerrilla&family=Protest+Riot&family=Protest+Strike&family=Roboto+Slab:wght@300;400;600;800&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />

  </head>

  <body>
    <%= render "shared/navbar" unless controller_name == 'weddings' && action_name == 'show' %>
    <div class="body-content bpages">
      <%= yield %>
    </div>
    <%= render "shared/flashes" %>
    <%= render "shared/footer" %>
  </body>
</html>
